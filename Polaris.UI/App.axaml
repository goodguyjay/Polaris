<Application
    x:Class="Polaris.UI.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Polaris.UI.Views.Converters"
    xmlns:local="using:Polaris.UI"
    RequestedThemeVariant="Default">
    <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <!--  Converters  -->
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />

        <FontFamily x:Key="Inter">avares://Polaris.UI/Assets/Fonts/Inter/Inter-Regular.ttf#Inter</FontFamily>

        <!--  shadow effects  -->
        <DropShadowEffect
            x:Key="MaterialShadowDepth2"
            BlurRadius="12"
            Opacity="0.17"
            Color="#CC000000" />
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />

        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource Inter}" />
        </Style>

        <Style Selector="TextBox">
            <Setter Property="FontFamily" Value="{StaticResource Inter}" />
        </Style>

        <Style Selector="Button">
            <Setter Property="FontFamily" Value="{StaticResource Inter}" />
        </Style>

    </Application.Styles>
</Application>
