<UserControl
    x:Class="Polaris.UI.Views.Controls.TitleBar"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Polaris.UI.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DockPanel.Dock="Top"
    mc:Ignorable="d">

    <DockPanel Height="40">
        <DockPanel.Background>
            <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 0">
                <GradientStop Offset="0" Color="#23232B" />
                <GradientStop Offset="1" Color="#292B36" />
            </LinearGradientBrush>
        </DockPanel.Background>

        <!--  left: logo + app name  -->
        <StackPanel
            Margin="12,0,12,0"
            VerticalAlignment="Center"
            DockPanel.Dock="Left"
            Orientation="Horizontal"
            Spacing="8">

            <Image
                Width="24"
                Height="24"
                VerticalAlignment="Center"
                RenderTransformOrigin="0.5, 0.5"
                Source="/Assets/NorthStar.ico">
                <Image.Effect>
                    <DropShadowEffect
                        BlurRadius="6"
                        Opacity="0.25"
                        Color="#7EC7FF" />
                </Image.Effect>
            </Image>

            <TextBlock
                VerticalAlignment="Center"
                FontSize="17"
                FontWeight="SemiBold"
                Foreground="#E3E6F0"
                LetterSpacing="0.5"
                Text="Polaris" />
        </StackPanel>

        <!--  right: buttons  -->
        <StackPanel
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            DockPanel.Dock="Right"
            Orientation="Horizontal"
            Spacing="5">
            <Button
                Width="72"
                Height="30"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#2A2D3A"
                BorderBrush="#2D7DF7"
                BorderThickness="0"
                Command="{Binding OpenFileCommand, RelativeSource={RelativeSource AncestorType=local:TitleBar}}"
                Content="Open"
                CornerRadius="10"
                FontSize="13"
                Foreground="#B7BCD1">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#313545" />
                        <Setter Property="Foreground" Value="#FFFFFF" />
                    </Style>
                </Button.Styles>
            </Button>

            <Button
                Width="72"
                Height="30"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#2A2D3A"
                BorderBrush="#2D7DF7"
                BorderThickness="0"
                Command="{Binding SaveFileCommand, RelativeSource={RelativeSource AncestorType=local:TitleBar}}"
                Content="Save"
                CornerRadius="10"
                FontSize="13"
                Foreground="#B7BCD1">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#313545" />
                        <Setter Property="Foreground" Value="#FFFFFF" />
                    </Style>
                </Button.Styles>
            </Button>

            <Button
                Width="78"
                Height="30"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#2A2D3A"
                BorderBrush="#7EC7FF"
                BorderThickness="0"
                Command="{Binding ExportFileCommand, RelativeSource={RelativeSource AncestorType=local:TitleBar}}"
                Content="Export"
                CornerRadius="10"
                FontSize="13"
                Foreground="#7EC7FF">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#242839" />
                        <Setter Property="Foreground" Value="#B7BCD1" />
                    </Style>
                </Button.Styles>
            </Button>
        </StackPanel>

    </DockPanel>
</UserControl>
