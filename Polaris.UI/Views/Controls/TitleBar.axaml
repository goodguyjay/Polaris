<UserControl
    x:Class="Polaris.UI.Views.Controls.TitleBar"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Polaris.UI.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DockPanel.Dock="Top"
    mc:Ignorable="d">

    <DockPanel Height="30" Background="#2D2D2D">
        <StackPanel
            DockPanel.Dock="Left"
            Orientation="Horizontal"
            Spacing="5">

            <Image
                Width="20"
                Height="20"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Source="/Assets/NorthStar.ico" />

            <TextBlock
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="Bold"
                Foreground="#FFFFFF"
                Text="Polaris" />
        </StackPanel>

        <StackPanel
            Margin="10,0,10,0"
            DockPanel.Dock="Right"
            Orientation="Horizontal"
            Spacing="5">
            <Button
                Width="80"
                Height="30"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                Background="#454545"
                Command="{Binding SaveFileCommand, RelativeSource={RelativeSource AncestorType=local:TitleBar}}"
                Content="Save"
                FontSize="14"
                Foreground="#FFFFFF" />

            <Button
                Width="80"
                Height="30"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                Background="#454545"
                Command="{Binding OpenFileCommand, RelativeSource={RelativeSource AncestorType=local:TitleBar}}"
                Content="Open"
                FontSize="14"
                Foreground="#FFFFFF" />

            <Button
                Width="80"
                Height="30"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                Background="#454545"
                Content="Export"
                FontSize="14"
                Foreground="#FFFFFF" />
        </StackPanel>

    </DockPanel>
</UserControl>
