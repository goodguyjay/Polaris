<Window
    x:Class="Polaris.UI.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Polaris.UI.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Polaris.UI.ViewModels"
    Title="Polaris"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:MainWindowViewModel"
    ExtendClientAreaTitleBarHeightHint="-1"
    ExtendClientAreaToDecorationsHint="True"
    Icon="/Assets/NorthStar.ico"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <controls:SplashScreen x:Name="Splash" IsVisible="{Binding IsSplashVisible}" />

        <DockPanel Background="#181A20" IsVisible="{Binding IsSplashVisible, Converter={StaticResource InverseBooleanConverter}}">
            <controls:TitleBar OpenFileCommand="{Binding OpenPolarFileAsync}" SaveFileCommand="{Binding SavePolarFileAsync}" />

            <Grid
                Margin="0,0,0,0"
                ColumnDefinitions="*, 6,*"
                RowDefinitions="*">
                <Border
                    Grid.Column="0"
                    Margin="16"
                    Padding="0"
                    Background="#22242C"
                    BorderBrush="#252732"
                    BorderThickness="1"
                    CornerRadius="18"
                    Effect="{DynamicResource MaterialShadowDepth2}">
                    <Grid>
                        <TextBlock
                            Margin="12,8,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontSize="12"
                            FontWeight="Bold"
                            Foreground="#B7BCD1"
                            Opacity="0.75"
                            Text="Editor" />

                        <TextBox
                            Margin="12,32,12,12"
                            Padding="14"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            AcceptsReturn="True"
                            Background="#181A20"
                            BorderBrush="#22242C"
                            BorderThickness="0"
                            CornerRadius="14"
                            FontFamily="Consolas, JetBrains Mono, Cascadia Code, monospace"
                            FontSize="14"
                            Foreground="#E3E6F0"
                            Text="{Binding DocumentText, Mode=TwoWay}" />
                    </Grid>
                </Border>

                <GridSplitter
                    Grid.Column="1"
                    Width="6"
                    Margin="0,24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Stretch"
                    Background="#232630"
                    Cursor="SizeWestEast" />

                <Border
                    Grid.Column="2"
                    Margin="16"
                    Padding="0"
                    Background="#21232B"
                    BorderBrush="#252732"
                    BorderThickness="1"
                    CornerRadius="18"
                    Effect="{DynamicResource MaterialShadowDepth2}">
                    <Grid>
                        <TextBlock
                            Margin="12,8,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontSize="12"
                            FontWeight="Bold"
                            Foreground="#B7BCD1"
                            Opacity="0.75"
                            Text="Preview" />

                        <ScrollViewer Margin="12,32,12,12">
                            <ContentControl
                                Content="{Binding DocumentText}"
                                FontFamily="Inter, Segoe UI, sans-serif"
                                FontSize="14"
                                Foreground="#9ECFFF" />
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </DockPanel>

    </Grid>
</Window>
